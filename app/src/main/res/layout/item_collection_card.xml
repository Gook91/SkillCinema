<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/collection_card_width"
    android:layout_height="@dimen/collection_card_height"
    android:layout_marginTop="@dimen/borders"
    android:layout_marginEnd="@dimen/borders"
    android:background="@drawable/background_collection_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/app_nav_profile" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Любимые" />

        <TextView
            android:id="@+id/count"
            style="@style/ItemRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rating"
            tools:text="100" />
    </LinearLayout>

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="@dimen/button_delete_size"
        android:layout_height="@dimen/button_delete_size"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/button_delete_margin"
        android:contentDescription="@string/delete_collection"
        app:srcCompat="@drawable/button_close" />
</FrameLayout>