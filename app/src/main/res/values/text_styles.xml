<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarTitleText">
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!-- Общие стили для элементов-->
    <style name="ItemNameText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemDescriptionText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Вью с горизонтальным списком фильмов   -->
    <style name="TitleListText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemRatingText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Фрагмент фильма -->
    <style name="TextOnLogo">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="CheckBoxOnPoster" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="TextOnPoster">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ShortDescription">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EpisodeDate">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Фрагмент человека -->
    <style name="StaffName">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StaffProfession">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Фрагмент списка коллекций -->
    <style name="AddCollection">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Диалог новой коллекции -->
    <style name="NewCollectionName">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="DialogDoneButtonText">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Вью вкладок группы   -->
    <style name="TabMainText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_selector_text_tab_main</item>
    </style>

    <style name="TabCountText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_blue</item>
    </style>

    <!-- Окна поиска-->
    <style name="NothingFoundText">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchBox">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ItemSimpleString">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="selected_value">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="hint_at_radio">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>