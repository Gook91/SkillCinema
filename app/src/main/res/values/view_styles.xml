<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageShapeAppearance">
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CustomToggleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/group_toggle_background_selector</item>
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@font/graphik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/group_toggle_text_color_selector</item>
    </style>

    <style name="YearTextView">
        <item name="android:layout_margin">@dimen/small_borders</item>
        <item name="android:textColor">@color/year_table_text_selector</item>
        <item name="font">@font/graphik_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>